<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="EditItemView">
        <attr name="left_border_color" format="color" />
        <attr name="left_image" format="reference" />
        <attr name="right_border_color" format="color" />
        <attr name="right_image" format="reference" />

        <attr name="middle_text_size" format="dimension" />
        <attr name="middle_text_color" format="color" />
        <attr name="unit" format="reference" />

    </declare-styleable>

    <declare-styleable name="ProgressView">
        <attr name="frameCount" format="integer"/>
        <attr name="duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="StatusView">
        <attr name="outside_circle_border_width" format="dimension"/>
        <attr name="inside_circle_border_width" format="dimension"/>
        <attr name="circles_gap" format="dimension"/>
        <attr name="text_margin" format="dimension"/>
        <attr name="circle_color" format="color"/>
        <attr name="text" format="string"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>

</resources>