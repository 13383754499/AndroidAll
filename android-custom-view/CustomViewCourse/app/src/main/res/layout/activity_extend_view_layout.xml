<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.chiclaim.customview.view.RectView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp" />


    <com.chiclaim.customview.view.RoundRectView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp" />


    <com.chiclaim.customview.view.CircleView
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <com.chiclaim.customview.view.StatusView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:circle_color="#ff9900"
        app:circles_gap="6dp"
        app:outside_circle_border_width="4dp"
        app:inside_circle_border_width="2dp"
        app:text="退款中"
        app:text_margin="6dp"/>


</LinearLayout>